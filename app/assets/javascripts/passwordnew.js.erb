function isValidEmail(email) {
  var regexEmail = /^[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?$/i;
  return regexEmail.test($.trim(email));
}

$('.actions .btn').on('click', function(event) {
  if ( !isValidEmail($(".reset-pw .inputs #user_email").val()) ) { 
    $('.not-found-error').fadeOut();
    $(".modal-regist .regist-email").focus();
    $('.email-error').fadeIn(300).text("이메일을 정확히 입력해 주세요.");
    console.log("invalid");
    return false;
  } else {
    console.log("valid");
    $('.new_user').submit();
  }
});